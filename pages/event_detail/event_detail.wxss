/* pages/event_detail/event_detail.wxss */
html body {
  width: 100%;
  height: 100%;
}

.page {
  width: 100%;
  height: 100%;
}

.page__bd {
  margin-bottom: 10%;
}

.text-center {
  text-align: center
}

.text-bd {
  font-family: -apple-system,BlinkMacSystemFont,Helvetica Neue,PingFang SC,Microsoft YaHei,Source Han Sans SC,Noto Sans CJK SC,WenQuanYi Micro Hei,sans-serif;
  font-size: 15px;
  color: #1a1a1a;
  text-align: left;
}

.text-p {
  text-align: right;
}

.footer-group-fixed {
  padding: 0px;
  width: 100%;
  background-color: white;
  position: fixed;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  bottom: 0px;
  padding-right: 50%;
  border-top: 1px solid rgba(135, 135, 135, 0.1);
  min-height: 5%;
  font-size: 8px;
}

.flex-item {
  flex: 1;
  font-family: -apple-system,BlinkMacSystemFont,Helvetica Neue,PingFang SC,Microsoft YaHei,Source Han Sans SC,Noto Sans CJK SC,WenQuanYi Micro Hei,sans-serif;
  color: #999;
  font-size: 9px;
  display: flex;
  padding-left: 10%;
  flex-direction: column;
  /* TODO 让子元素自动居中 */
}

.footer-pic {
  height: 16px;
  width: 16px;
}

.swiper-cell {
  text-align: center;
}